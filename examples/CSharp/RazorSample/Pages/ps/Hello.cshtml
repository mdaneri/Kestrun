@page
@using Kestrun.Razor
@model PwshKestrunModel
<!-- one generic model provided by library -->
@{
    Layout = null;
    var data = Model.Data ?? new { Title = "Fallback", UserName = "Guest" };
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@data.Title</title>
</head>
<body>
    <h1>@data.Title</h1>
    <p>Welcome, @data.UserName!</p>
    <p>This page is powered by PowerShell and Razor.</p>
    <p>Sentence of the day: @(data.SentenceOfTheDay)</p>
    <p>Served at @DateTime.UtcNow.ToString("u")</p>
</body>
</html>
